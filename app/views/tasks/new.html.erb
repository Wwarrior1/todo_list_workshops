<div class='main-content'>
  <div class='basic'>
    <div class="card">
      <h1 class="card-header">
        Add New Task
      </h1>

      <div class="card-body">
        <%= form_for(@task, url: tasks_path) do |f| %>

            <% if @task.errors.any? %>
                <div class="alert alert-danger">
                  <% @task.errors.full_messages.each do |message| %>
                    <span style="font-weight: normal">
                      <%= message %>
                    </span>
                  <% end %>
                </div>
            <% end %>
            <div class="btn btn-sm button">
              <%= link_to 'Tasks list', tasks_path, :class => 'btn btn-sm btn-outline-secondary' %>
            </div>


            <div class='row field'>
              <label>
                <span class="field-header">Title</span>
                <%= f.text_field :title %>
              </label>
            </div>

            <div class='row field'>
              <label>
                <span class="field-header">Description</span>
                <%= f.text_area :description %>
              </label>
            </div>

            <div class='row field'>
              <label>
                <span class="field-header">Time</span>
                <%= f.datetime_select :time %>
              </label>
            </div>

            <div>
              <button type="submit" class="btn btn-primary">Add task</button>
            </div>

        <% end %>
      </div>

    </div>
  </div>
</div>